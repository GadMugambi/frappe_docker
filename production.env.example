# Production Environment Variables - EXAMPLE
# Copy to production.env and fill in actual values

# Version
ERPNEXT_VERSION=v15.87.0

# Database
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DB_HOST=db
DB_PORT=3306

# Redis
REDIS_CACHE=redis-cache:6379
REDIS_QUEUE=redis-queue:6379

# SSL/HTTPS
LETSENCRYPT_EMAIL=your-email@example.com

# Sites - Add your actual domains
SITES=`example1.com`,`example2.com`

# Image Configuration
CUSTOM_IMAGE=yourcompany/erpnext-healthcare
CUSTOM_TAG=v15-latest
RESTART_POLICY=unless-stopped
PULL_POLICY=always

# Nginx Configuration
PROXY_READ_TIMEOUT=300
CLIENT_MAX_BODY_SIZE=100m

# Upstream
UPSTREAM_REAL_IP_ADDRESS=172.17.0.1
UPSTREAM_REAL_IP_HEADER=X-Forwarded-For
UPSTREAM_REAL_IP_RECURSIVE=off
